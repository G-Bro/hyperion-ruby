{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/frontend/*"],
      "~/*": ["./app/frontend/*"]
    },
    "types": [
      "vite/client",
      "vue"
    ],
    "isolatedModules": true,
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ],
  "include": [
    "./app/frontend"
  ],
}